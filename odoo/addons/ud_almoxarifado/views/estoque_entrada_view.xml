<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record model="ir.actions.act_window" id="ud_almoarifado_estoque_entrada_action">
            <field name="name">Entrada</field>
            <field name="res_model">ud.almoxarifado.entrada</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Clque para adicionar uma nova Entrada
                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_almoarifado_estoque_entrada_tree">
            <field name="name">Entradas</field>
            <field name="model">ud.almoxarifado.entrada</field>
            <field name="arch" type="xml">
                <tree string="Entradas">
                    <field name="estoque_id" />
                    <field name="quantidade" />
                    <field name="data_entrada" />
                    <field name="tipo" />
                    <field name="fornecedor_id" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_almoarifado_estoque_entrada_search">
            <field name="name">Busca</field>
            <field name="model">ud.almoxarifado.entrada</field>
            <field name="arch" type="xml">
                <search string="Buscar">
                    <field name="estoque_id" filter_domain="" string="Produto"/>
                    <field name="data_entrada" filter_domain="" string="Data de entrada"/>
                    <field name="tipo" filter_domain="" string="Tipo"/>
                    <field name="fornecedor_id" filter_domain="" string="Fornecedor"/>
                    <group expand="0" string="Agrupar por:">
                        <filter string="Estoque" icon="terp-personal" domain="[]" context="{'group_by':'estoque_id'}"/>
                        <filter string="Fornecedor" icon="terp-personal" domain="[]" context="{'group_by':'fornecedor_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_almoarifado_estoque_entrada_form">
            <field name="name">Entrada</field>
            <field name="model">ud.almoxarifado.entrada</field>
            <field name="arch" type="xml">
                <form string="Entrada">
                    <div class="form-horizontal sheet col-sm-12 col-xs-12">
                        <div class="col-md-6 col-lg-6 form-group">
                            <label class="col-md-4 col-sm-4 control-label" for="data_entrada"></label>
                            <div class="col-md-7 col-sm-7">
                                <field name="data_entrada"/>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 form-group">
                            <label class="col-md-4 col-sm-4 control-label" for="quantidade"></label>
                            <div class="col-md-7 col-sm-7">
                                <field name="quantidade"/>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 form-group">
                            <label class="col-md-4 col-sm-4 control-label" for="tipo"></label>
                            <div class="col-md-7 col-sm-7">
                                <field name="tipo"/>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 form-group" attrs="{'invisible': [('tipo', '!=', 'fornecedor')]}">
                            <label class="col-md-4 col-sm-4 control-label" for="fornecedor_id"></label>
                            <div class="col-md-7 col-sm-7">
                                <field name="fornecedor_id" attrs="{'required': [('tipo', '=', 'fornecedor')]}"/>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 form-group" attrs="{'invisible': [('solicitacao_id', '=', False)]}">
                            <label class="col-md-4 col-sm-4 control-label" for="solicitacao_id"></label>
                            <div class="col-md-7 col-sm-7">
                                <field name="solicitacao_id"/>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-12 form-group">
                            <legend>Observações</legend>
                            <div class="col-md-12 col-sm-12">
                                <field name="observacao"/>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>