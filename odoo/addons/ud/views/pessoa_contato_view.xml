<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record model="ir.actions.act_window" id="pessoa_contato_action">
            <field name="name">Contato</field>
            <field name="res_model">ud.pessoa.contato</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Clque para adicionar um novo Contato
                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="pessoa_contato_tree">
            <field name="name">Contatos</field>
            <field name="model">ud.pessoa.contato</field>
            <field name="arch" type="xml">
                <tree string="Contatos">
                    <field name="tipo"/>
                    <field name="contato"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="pessoa_contato_search">
            <field name="name">Busca</field>
            <field name="model">ud.pessoa.contato</field>
            <field name="arch" type="xml">
                <search string="Buscar">
                    <field name="tipo"/>
                    <field name="contato"/>
                    <group expand="0" string="Agrupar por:">
                        <filter string="Tipo" icon="terp-personal" domain="[]" context="{'group_by':'tipo'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="pessoa_contato_form">
            <field name="name">Contato</field>
            <field name="model">ud.pessoa.contato</field>
            <field name="arch" type="xml">
                <form string="Contato">
                    <div class="form-horizontal sheet col-sm-12 col-xs-12">
                        <div class="col-md-6 col-lg-6 form-group">
                            <label class="col-md-4 col-sm-4 control-label" for="tipo"></label>
                            <div class="col-md-7 col-sm-7">
                                <field name="tipo"/>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 form-group">
                            <label class="col-md-4 col-sm-4 control-label" for="contato"></label>
                            <div class="col-md-7 col-sm-7">
                                <field name="contato"/>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>