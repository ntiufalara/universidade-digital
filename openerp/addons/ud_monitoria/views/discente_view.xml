<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <!-- DOCUMENTOS DISCENTE -->
        <record id="action_ud_monitoria_documentos_discente" model="ir.actions.act_window">
            <field name="name">Documentos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud_monitoria.documentos_discente</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"filtrar_discente": True}</field>
        </record>

        <record id="action_ud_monitoria_documentos_discente_coordenador" model="ir.actions.act_window">
            <field name="name">Documentos/Discentes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud_monitoria.documentos_discente</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_ud_monitoria_horarios_discente" model="ir.actions.act_window">
            <field name="name">Horários</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud_monitoria.documentos_discente</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', 'in', ['bolsista', 'n_bolsista'])]</field>
            <field name="context">{"documentos_ativos": True}</field>
            <field name="help" type="html">
                <div>
                    Todos os horários dos monitores e tutores ativos serão mostrados aqui.
                </div>
            </field>
        </record>

        <record id="ud_monitoria_documentos_discente_tree" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_discente.form</field>
            <field name="model">ud_monitoria.documentos_discente</field>
            <field eval="10" name="priority"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Horários" create="false" edit="false" delete="false">
                    <field name="curso_id"/>
                    <field name="disciplina_id"/>
                    <field name="discente_id"/>
                    <field name="tutor"/>
                </tree>
            </field>
        </record>

        <record id="ud_monitoria_documentos_discente_coordenador_tree" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_discente_coordenador.tree</field>
            <field name="model">ud_monitoria.documentos_discente</field>
            <field name="inherit_id" ref="ud_monitoria_documentos_discente_tree"/>
            <field name="groups_id" eval="[(6, 0, [ref('ud_monitoria.group_ud_monitoria_coordenador'), ref('ud_monitoria.group_ud_monitoria_administrador')])]"/>
            <field name="arch" type="xml">
                <field name="discente_id" position="after">
                    <field name="semestre_id"/>
                </field>
                <field name="disciplina_id" position="attributes">
                    <attribute name="invisible">context.get('ocultar_disciplina', False)</attribute>
                </field>
                <field name="tutor" position="after">
                    <field name="state"/>
                    <field name="is_active"/>
                     <button name="%(ud_monitoria.ud_monitoria_desligamento_wizard_action)d" type="action"
                            groups="ud_monitoria.group_ud_monitoria_orientador,ud_monitoria.group_ud_monitoria_coordenador,ud_monitoria.group_ud_monitoria_administrador"
                            string="Desligar" icon="STOCK_CANCEL" states="bolsista,n_bolsista"/>
                </field>
            </field>
        </record>

        <record id="ud_monitoria_documentos_discente_form" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_discente.form</field>
            <field name="model">ud_monitoria.documentos_discente</field>
            <field eval="10" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Horários" create="false" edit="false" delete="false" version="7.0">
                    <group col="4">
                        <field name="orientador_id" colspan="2" readonly="1" options="{'no_open': true}"/>
                        <field name="discente_id" colspan="2" options="{'no_open': true}" readonly="1"/>
                        <field name="curso_id" colspan="2" readonly="1"/>
                        <field name="disciplina_id" colspan="2" readonly="1"/>
                        <field name="tutor" colspan="2" readonly="1"/>
                    </group>
                    <group string="Horários">
                        <field name="horario_ids" nolabel="1" readonly="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="ud_monitoria_documentos_discente_completo_form" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_discente.completo.form</field>
            <field name="model">ud_monitoria.documentos_discente</field>
            <field eval="20" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Documentos" create="false" delete="false" version="7.0">
                    <header>
                        <button name="%(ud_monitoria.ud_monitoria_desligamento_wizard_action)d" type="action" string="Desligar"
                                groups="ud_monitoria.group_ud_monitoria_orientador,ud_monitoria.group_ud_monitoria_coordenador,ud_monitoria.group_ud_monitoria_administrador"
                                icon="STOCK_CANCEL" attrs="{'invisible': ['|', ('state', 'not in', ['bolsista', 'n_bolsista']), ('is_active', '=', False)]}"/>
                        <button name="tornar_n_bolsista" string="Tornar Não bolsista" type="object" attrs="{'invisible': [('state', '!=', 'reserva')]}"
                                groups="ud_monitoria.group_ud_monitoria_coordenador,ud_monitoria.group_ud_monitoria_administrador"
                                confirm="Realmente deseja retirar do cadastro de reserva para torná-lo(a) um(a) discente não bolsista?"/>
						<field name="state" widget="statusbar"/>
                    </header>
                    <field name="declaracao_nome" invisible="1"/>
                    <field name="certificado_nome" invisible="1"/>
                    <field name="relatorio_nome" invisible="1"/>
                    <field name="frequencia_controle" invisible="1"/>
                    <group col="4">
                        <field name="semestre_id" colspan="2" readonly="1" options="{'no_open': true}"/>
                        <field name="orientador_id" colspan="2" readonly="1" options="{'no_open': true}"/>
                        <field name="perfil_id" colspan="2" readonly="1"/>
                        <field name="discente_id" colspan="2" readonly="1" options="{'no_open': true}"/>
                        <field name="tutor" colspan="2" readonly="1"/>
                        <field name="dados_bancarios_id" colspan="2" readonly="1" options="{'no_open': true}"/>
                        <field name="curso_id" colspan="2" readonly="1"/>
                        <field name="disciplina_id" colspan="2" readonly="1"/>
                        <field name="ch" colspan="2"/>
                        <field name="is_active" colspan="2" readonly="1"/>
                    </group>
                    <group string="Documentos" col="4">
                        <field name="certificado" filename="certificado_nome" readonly="1" colspan="2"/>
                        <field name="declaracao" filename="declaracao_nome" readonly="1" colspan="2"/>
                        <field name="relatorio" filename="relatorio_nome" colspan="2" attrs="{'readonly': [('is_active', '=', False)]}"/>
                    </group>
                    <group string="Frequências" col="4">
                        <div style="color:red;" colspan="4" attrs="{'invisible': ['|', ('is_active', '=', False), ('frequencia_controle', '=', False)]}">
                            <strong>Atenção:</strong> Você pode adicionar novas frequências.
                        </div>
                        <field name="frequencia_ids" nolabel="1" colspan="4"
                               attrs="{'readonly': ['|', ('frequencia_controle', '=', False), ('is_active', '=', False)]}"/>
                    </group>
                    <group string="Horários">
                        <field name="horario_ids" nolabel="1" readonly="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="ud_monitoria_documentos_discente_monitor_form" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_discente.form</field>
            <field name="model">ud_monitoria.documentos_discente</field>
            <field name="inherit_id" ref="ud_monitoria_documentos_discente_completo_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('ud_monitoria.group_ud_monitoria_monitor')])]"/>
            <field name="arch" type="xml">
                <field name="horario_ids" position="attributes">
                    <attribute name="attrs">{'readonly': [('is_active', '=', False)]}</attribute>
                    <attribute name="readonly"/>
                </field>
            </field>
        </record>

        <record id="ud_monitoria_documentos_discente_coordenador_form" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_discente.coordenador.form</field>
            <field name="model">ud_monitoria.documentos_discente</field>
            <field name="inherit_id" ref="ud_monitoria_documentos_discente_completo_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('ud_monitoria.group_ud_monitoria_coordenador'), ref('ud_monitoria.group_ud_monitoria_administrador')])]"/>
            <field name="arch" type="xml">
                <field name="orientador_id" position="attributes">
                    <attribute name="options"/>
                    <attribute name="context">{'form_view_ref': 'ud_monitoria.ud_employee_info_basicas_form_view'}</attribute>
                </field>
                <field name="declaracao" position="attributes">
                    <attribute name="readonly"/>
                    <attribute name="attrs">{'readonly': [('declaracao', '!=', False)]}</attribute>
                </field>
                <field name="certificado" position="attributes">
                    <attribute name="readonly"/>
                    <attribute name="attrs">{'readonly': [('declaracao', '!=', False)]}</attribute>
                </field>
            </field>
        </record>

        <record id="ud_monitoria_documentos_discente_admin_form" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_discente.admin.form</field>
            <field name="model">ud_monitoria.documentos_discente</field>
            <field name="inherit_id" ref="ud_monitoria_documentos_discente_coordenador_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('ud_monitoria.group_ud_monitoria_administrador')])]"/>
            <field name="arch" type="xml">
                <field name="declaracao" position="attributes">
                    <attribute name="attrs"/>
                </field>
                <field name="certificado" position="attributes">
                    <attribute name="attrs"/>
                </field>
                <field name="relatorio" position="attributes">
                    <attribute name="attrs"/>
                </field>
            </field>
        </record>

        <record id="action_ud_monitoria_documentos_discente_coordenador_tree_view" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_ud_monitoria_documentos_discente_coordenador"/>
            <field name="view_id" ref="ud_monitoria_documentos_discente_coordenador_tree"/>
            <field name="view_mode">tree</field>
            <field name="sequence" eval="0"/>
        </record>

        <record id="action_ud_monitoria_documentos_discente_coordenador_form_view" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_ud_monitoria_documentos_discente_coordenador"/>
            <field name="view_id" ref="ud_monitoria_documentos_discente_coordenador_form"/>
            <field name="view_mode">form</field>
            <field name="sequence" eval="1"/>
        </record>

        <record id="action_ud_monitoria_documentos_discente_tree_view" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_ud_monitoria_documentos_discente"/>
            <field name="view_id" ref="ud_monitoria_documentos_discente_tree"/>
            <field name="view_mode">tree</field>
            <field name="sequence" eval="0"/>
        </record>

        <record id="action_ud_monitoria_documentos_discente_form_view" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_ud_monitoria_documentos_discente"/>
            <field name="view_id" ref="ud_monitoria_documentos_discente_completo_form"/>
            <field name="view_mode">form</field>
            <field name="sequence" eval="1"/>
        </record>

        <!-- HORÁRIO -->
        <record id="action_ud_monitoria_horario" model="ir.actions.act_window">
            <field name="name">Horário</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud_monitoria.horario</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="ud_monitoria_horario_tree">
            <field name="name">ud_monitoria.horario.tree</field>
            <field name="model">ud_monitoria.horario</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Horários">
                    <field name="dia"/>
                    <field name="hora_i"/>
                    <field name="hora_f"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_monitoria_horario_form">
            <field name="name">ud_monitoria.horario.form</field>
            <field name="model">ud_monitoria.horario</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Horário" version="7.0">
                    <group col="4">
                        <field name="dia" colspan="2"/>
                        <field name="ch" colspan="2"/>
                        <field name="hora_i" colspan="2" widget="hora"/>
                        <field name="hora_f" colspan="2" widget="hora"/>
                    </group>
                    <group string="Observações">
                        <field name="observacoes" nolabel="1"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- FREQUÊNCIA -->
        <record id="action_ud_monitoria_frequencia" model="ir.actions.act_window">
            <field name="name">Frequência</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud_monitoria.frequencia</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="ud_monitoria_frequencia_tree" model="ir.ui.view">
            <field name="name">ud_monitoria.frequencia.form</field>
            <field name="model">ud_monitoria.frequencia</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Frequências" delete="false" colors="red:state=='rejeitado';blue:state=='analise';green:state=='aceito'">
                    <field name="frequencia_nome" invisible="1"/>
                    <field name="mes"/>
                    <field name="ano"/>
                    <field name="frequencia" filename="frequencia_nome"/>
                    <field name="state"/>
                    <button name="botao_aceitar" string="Aceitar" type="object" icon="STOCK_APPLY"
                            groups="ud_monitoria.group_ud_monitoria_orientador,ud_monitoria.group_ud_monitoria_coordenador"
                            confirm="Deseja aceitar a frequência?" states="analise"/>
                    <button name="botao_rejeitar" string="Rejeitar" type="object" icon="STOCK_CANCEL"
                            groups="ud_monitoria.group_ud_monitoria_orientador,ud_monitoria.group_ud_monitoria_coordenador"
                            confirm="Deseja rejeitar a frequência?" states="analise"/>
                </tree>
            </field>
        </record>

        <record id="ud_monitoria_frequencia_tree_admin" model="ir.ui.view">
            <field name="name">ud_monitoria.frequencia.form</field>
            <field name="model">ud_monitoria.frequencia</field>
            <field name="inherit_id" ref="ud_monitoria_frequencia_tree"/>
            <field name="groups_id" eval="[(6, 0, [ref('ud_monitoria.group_ud_monitoria_coordenador'), ref('ud_monitoria.group_ud_monitoria_administrador')])]"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <button name="unlink" string="Apagar" type="object" icon="gtk-delete"
                            confirm="Você têm certeza que deseja excluir esse registro? Essa ação não poderá ser desfeita."/>
                </field>
            </field>
        </record>

        <record id="ud_monitoria_frequencia_form" model="ir.ui.view">
            <field name="name">ud_monitoria.frequencia.form</field>
            <field name="model">ud_monitoria.frequencia</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Frequência" version="7.0">
                    <field name="frequencia_nome" invisible="1"/>
                    <header>
                        <button name="botao_aceitar" string="Aceitar" type="object"
                                groups="ud_monitoria.group_ud_monitoria_orientador,ud_monitoria.group_ud_monitoria_coordenador"
                                confirm="Deseja aceitar a frequência?" states="analise"/>
                        <button name="botao_rejeitar" string="Rejeitar" type="object"
                                groups="ud_monitoria.group_ud_monitoria_orientador,ud_monitoria.group_ud_monitoria_coordenador"
                                confirm="Deseja rejeitar a frequência?" states="analise"/>
                        <field name="state" widget="statusbar" states="analise,rejeitado,aceito"/>
                    </header>
                    <group col="4">
                        <field name="mes" colspan="2"/>
                        <field name="ano" colspan="2"/>
                        <field name="frequencia" colspan="4" filename="frequencia_nome"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>