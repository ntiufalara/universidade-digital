<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <!-- INFORMAÇÕES ADICIONAIS DE CURSO -->
        <record id="ud_curso_form_view" model="ir.ui.view">
            <field name="name">ud.curso.form</field>
            <field name="model">ud.curso</field>
            <field name="inherit_id" ref="ud.view_curso_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='coordenador']" position="after">
                    <field name="coord_monitoria_id" colspan="2" options="{'no_open': true}"/>
                </xpath>
            </field>
        </record>

        <record id="ud_monitoria_curso_form_admin_view" model="ir.ui.view">
            <field name="name">ud.curso.form</field>
            <field name="model">ud.curso</field>
            <field name="inherit_id" ref="ud_curso_form_view"/>
            <field name="groups_id" eval="[(6, 0, [ref('base.admin_ud')])]"/>
            <field name="arch" type="xml">
                <field name="coord_monitoria_id" position="attributes">
                    <attribute name="options"/>
                </field>
            </field>
        </record>

        <!-- PESSOA: NÚCLEO -->
        <record id="ud_employee_info_basicas_form_view" model="ir.ui.view">
            <field name="name">ud.employee.form</field>
            <field name="model">ud.employee</field>
            <field name="priority" eval="17"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Pessoa" create="false" edit="false" delete="false" version="7.0">
                    <group col="8">
                        <group colspan="6">
                            <field name="name" string="Nome"/>
                        </group>
                        <field name="image" widget='image' nolabel="1" class="oe_left oe_avatar" colspan="2"/>
                        <group string="Informações Pessoais" col="4" colspan="8">
                            <field name="cpf" class="cpf" colspan="2"/>
                            <field name="rg" colspan="2"/>
                            <field name="orgaoexpedidor" colspan="2"/>
                            <field name="birthday" class="birthday" colspan="2"/>
                            <field name="gender" colspan="2"/>
                            <field name="nacionalidade" colspan="2"/>
                            <field name="marital" colspan="2"/>
                        </group>
                        <group string="Outras Informações" col="4" colspan="8">
                            <group colspan="2">
                                <field name="rua"/>
                                <field name="bairro"/>
                                <field name="cidade"/>
                                <field name="estado"/>
                            </group>
                            <group colspan="2">
                                <field name="work_phone" class="work_phone"/>
                                <field name="mobile_phone" class="telefone" required="1"/>
                                <field name="work_email" widget="email" required="1"/>
                                <field name="curriculo_lattes_link" widget="url"/>
                            </group>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!-- DISCIPLINA -->
        <record id="action_ud_monitoria_disciplina" model="ir.actions.act_window">
            <field name="name">Disciplinas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud_monitoria.disciplina</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_ud_monitoria_disciplina_ativa" model="ir.actions.act_window">
            <field name="name">Disciplinas Ativas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud_monitoria.disciplina</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'disciplina_ativa': True}</field>
        </record>

        <record id="ud_monitoria_disciplina_tree" model="ir.ui.view">
            <field name="name">ud_monitoria.disciplina.form</field>
            <field name="model">ud_monitoria.disciplina</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Disciplinas" colors="blue:is_active==True">
                    <field name="disciplina_ids"/>
                    <field name="bolsas_curso_id"/>
                    <field name="orientador_id"/>
                    <field name="tutoria"/>
                    <field name="bolsistas"/>
                    <field name="colaboradores"/>
                    <field name="is_active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="ud_monitoria_disciplina_form" model="ir.ui.view">
            <field name="name">ud_monitoria.disciplina.form</field>
            <field name="model">ud_monitoria.disciplina</field>
            <field name="type">form</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <form string="Disciplinas" version="7.0">
                    <field name="id" invisible="1"/>
                    <field name="is_active" invisible="1"/>
                    <group col="4">
                        <field name="bolsas_curso_id" readonly="1" colspan="2" options="{'no_open': true}"/>
                        <field name="semestre_id" colspan="2" options="{'no_open': true}"/>
                        <field name="data_inicial" colspan="2" readonly="context.get('somente_leitura', False)"/>
                        <field name="data_final" colspan="2" readonly="context.get('somente_leitura', False)"/>
                        <field name="perfil_id" colspan="2" options="{'no_open': true}" on_change="onchange_perfil(perfil_id)"
                               attrs="{'readonly': [('id', '!=', False)]}"
                               groups="ud_monitoria.group_ud_monitoria_coord_disciplina,ud_monitoria.group_ud_monitoria_coordenador,ud_monitoria.group_ud_monitoria_administrador"/>
                        <field name="tutoria" colspan="2" on_change="onchange_modalidade_disciplina(tutoria,disciplina_ids)"/>
                        <field name="orientador_id" colspan="4" readonly="1" options="{'no_open': true}"/>
                    </group>
                    <group string="Vagas" col="4">
                        <field name="bolsistas" colspan="2" readonly="context.get('somente_leitura', False)"/>
                        <field name="colaboradores" colspan="2" readonly="context.get('somente_leitura', False)"/>
                    </group>
                    <group string="Informações de Bolsas" col="4"
                           groups="ud_monitoria.group_ud_monitoria_coord_disciplina,ud_monitoria.group_ud_monitoria_coordenador,ud_monitoria.group_ud_monitoria_administrador">
                        <field name="bolsas_utilizadas" colspan="2"/>
                        <field name="bolsas_disponiveis" colspan="2"/>
                    </group>
                    <notebook>
                        <page string="Disciplinas">
                            <field name="disciplina_ids" nolabel="1" attrs="{'readonly': [('id', '!=', False)]}"
                                   options="{'no_open': true}" on_change="onchange_modalidade_disciplina(tutoria,disciplina_ids)">
                                <tree string="Disciplina">
                                    <field name="codigo"/>
                                    <field name="name"/>
                                    <field name="periodo"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group string="Discentes" groups="ud_monitoria.group_ud_monitoria_coord_disciplina,ud_monitoria.group_ud_monitoria_coordenador,ud_monitoria.group_ud_monitoria_administrador"
                           attrs="{'invisible': [('bolsista_ids', '=', [(6, False, [])]), ('n_bolsista_ids', '=', [(6, False, [])]), ('reserva_ids', '=', [(6, False, [])]), ('desligado_ids', '=', [(6, False, [])])]}">
                        <notebook>
                            <page string="Bolsistas" attrs="{'invisible': [('bolsista_ids', '=', [(6, False, [])])]}">
                                <field name="bolsista_ids" nolabel="1" context="{'ocultar_disciplina': True}"/>
                            </page>
                            <page string="Não bolsistas" attrs="{'invisible': [('n_bolsista_ids', '=', [(6, False, [])])]}">
                                <field name="n_bolsista_ids" nolabel="1" context="{'ocultar_disciplina': True}"/>
                            </page>
                            <page string="Em reserva" attrs="{'invisible': [('reserva_ids', '=', [(6, False, [])])]}">
                                <field name="reserva_ids" nolabel="1" context="{'ocultar_disciplina': True}"/>
                            </page>
                            <page string="Desligados" attrs="{'invisible': [('desligado_ids', '=', [(6, False, [])])]}">
                                <field name="desligado_ids" nolabel="1" context="{'ocultar_disciplina': True}"/>
                            </page>
                        </notebook>
                    </group>
                </form>
            </field>
        </record>

        <record id="ud_monitoria_disciplina_coordenador_form" model="ir.ui.view">
            <field name="name">ud_monitoria.disciplina.coordenador.form</field>
            <field name="model">ud_monitoria.disciplina</field>
            <field name="inherit_id" ref="ud_monitoria_disciplina_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('ud_monitoria.group_ud_monitoria_coordenador'), ref('ud_monitoria.group_ud_monitoria_administrador')])]"/>
            <field name="arch" type="xml">
                <field name="orientador_id" position="attributes">
                    <attribute name="options"/>
                    <attribute name="context">{'form_view_ref': 'ud_monitoria.ud_employee_info_basicas_form_view'}</attribute>
                </field>
                <xpath expr="//notebook/page[@string='Disciplinas']" position="after">
                    <page string="Inscrições">
                        <field name="inscricao_ids" nolabel="1"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
