<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <!-- DOCUMENTOS ORIENTADOR -->
        <record id="action_ud_monitoria_documentos_orientador" model="ir.actions.act_window">
            <field name="name">Documentos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud_monitoria.documentos_orientador</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"filtrar_orientador": True}</field>
        </record>

        <record id="action_ud_monitoria_documentos_orientador_coordenacao" model="ir.actions.act_window">
            <field name="name">Documentos/Orientadores</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud_monitoria.documentos_orientador</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="ud_monitoria_documentos_orientador_tree" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_orientador.form</field>
            <field name="model">ud_monitoria.documentos_orientador</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Documentos" colors="blue:is_active==True">
                    <field name="disciplina_id"/>
                    <field name="curso_id"/>
                    <field name="perfil_id" groups="ud_monitoria.group_ud_monitoria_orientador,ud_monitoria.group_ud_monitoria_coordenador,ud_monitoria.group_ud_monitoria_administrador"/>
                    <field name="orientador_id"/>
                    <field name="semestre_id"/>
                    <field name="is_active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="ud_monitoria_documentos_orientador_form" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_orientador.form</field>
            <field name="model">ud_monitoria.documentos_orientador</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Documento" version="7.0" delete="false">
                    <field name="id" invisible="1"/>
                    <group name="info" col="4">
                        <field name="orientador_id" colspan="4" readonly="1"
                               options="{'no_open': true, 'create_edit': false, 'create': false}"/>
                        <field name="disciplina_id" colspan="2" readonly="1" options="{'no_open': true}" context="{'somente_leitura': True}"/>
                        <field name="curso_id" colspan="2" readonly="1" options="{'no_open': true}"/>
                        <field name="semestre_id" colspan="2" readonly="1" options="{'no_open': true}"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="ud_monitoria_documentos_orientador_orientador_form" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_orientador.orientador.form</field>
            <field name="model">ud_monitoria.documentos_orientador</field>
            <field name="inherit_id" ref="ud_monitoria_documentos_orientador_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('ud_monitoria.group_ud_monitoria_orientador'),ref('ud_monitoria.group_ud_monitoria_coordenador'),ref('ud_monitoria.group_ud_monitoria_administrador')])]"/>
            <field name="arch" type="xml">
                <field name="disciplina_id" position="attributes">
                    <attribute name="options"/>
                </field>
                <field name="orientador_id" position="before">
                    <field name="perfil_id" colspan="2" readonly="1" options="{'no_open': true}"/>
                </field>
                <field name="orientador_id" position="attributes">
                    <attribute name="colspan">2</attribute>
                    <attribute name="context">{'form_view_ref': 'ud_monitoria.ud_employee_info_basicas_form_view'}</attribute>
                </field>
                <xpath expr="//group[@name='info']" position="after">
                    <group string="Documentos" col="4"
                           attrs="{'invisible': ['|', ('declaracao', '=', False), ('certificado', '=', False)]}">
                        <field name="declaracao_nome" invisible="1"/>
                        <field name="certificado_nome" invisible="1"/>
                        <field name="declaracao" colspan="2" filename="declaracao_nome" readonly="1"
                               attrs="{'invisible': [('declaracao', '=', False)]}"/>
                        <field name="certificado" colspan="2" filename="certificado_nome" readonly="1"
                               attrs="{'invisible': [('certificado', '=', False)]}"/>
                    </group>
                    <group string="Discentes" attrs="{'invisible': [('doc_discente_ids', '=', [])]}">
                        <field name="doc_discente_ids" nolabel="1"
                               context="{'form_view_ref': 'ud_monitoria.ud_monitoria_documentos_discente_completo_form'}">
                                <tree string="Discente" create="false" delete="false"
                                      colors="green:state=='bolsista';blue:state=='n_bolsista';red:state=='desligado'">
                                    <field name="curso_id"/>
                                    <field name="disciplina_id"/>
                                    <field name="discente_id"/>
                                    <field name="tutor"/>
                                    <field name="state"/>
                                </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="ud_monitoria_documentos_orientador_coordenador_form" model="ir.ui.view">
            <field name="name">ud_monitoria.documentos_orientador.coordenador.form</field>
            <field name="model">ud_monitoria.documentos_orientador</field>
            <field name="inherit_id" ref="ud_monitoria_documentos_orientador_orientador_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('ud_monitoria.group_ud_monitoria_coordenador'),ref('ud_monitoria.group_ud_monitoria_administrador')])]"/>
            <field name="arch" type="xml">
                <field name="id" position="before">
                    <field name="is_active" invisible="1" readonly="1"/>
                    <header>
                        <button name="ativar" type="object" string="Ativar"
                                confirm="Realmente deseja reativar o víncudo de orientador da disciplina?"
                                attrs="{'invisible': [('is_active', '=', True)]}"/>
                        <button name="desativar" type="object" string="Desativar"
                                confirm="Realmente deseja desativar o víncudo de orientador da disciplina?"
                                attrs="{'invisible': [('is_active', '=', False)]}"/>
                    </header>
                </field>
                <field name="perfil_id" position="attributes">
                    <attribute name="readonly">not context.get('criar', False)</attribute>
                    <attribute name="on_change">onchange_perfil(perfil_id)</attribute>
                    <attribute name="attrs">{'readonly': [('id', '!=', False)]}</attribute>
                    <attribute name="options">{'create_edit': false, 'create': false, 'm2o_dialog': false}</attribute>
                </field>
                <xpath expr="//group[@string='Documentos']" position="attributes">
                    <attribute name="attrs"/>
                </xpath>
                <field name="declaracao" position="attributes">
                    <attribute name="readonly"/>
                    <attribute name="attrs"/>
                </field>
                <field name="certificado" position="attributes">
                    <attribute name="readonly"/>
                    <attribute name="attrs"/>
                </field>
                <field name="doc_discente_ids" position="attributes">
                    <attribute name="context">{'form_view_ref': 'ud_monitoria.ud_monitoria_documentos_discente_coordenador_form'}</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>