<?xml version="1.0" encoding="utf-8" ?>

<openerp>
    <data>

        <record model="ir.ui.view" id="ud_setor_form_inherited">
            <field name="name">Setor</field>
            <field name="model">ud.setor</field>
            <field name="inherit_id" ref="ud.view_setor_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_active']" position="after">
                    <field name="emite_portaria" />
                </xpath>
                <xpath expr="//field[@name='sigla']" position="after">
                    <field name="responsavel_id" required="1"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>